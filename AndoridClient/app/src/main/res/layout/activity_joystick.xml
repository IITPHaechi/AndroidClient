<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <Button
            android:id="@+id/conn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="conn" />

        <Button
            android:id="@+id/disconn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:text="disconn" />

        <ListView
            android:id="@+id/commandperseclist"
            android:layout_width="200dp"
            android:layout_height="150dp" />

        <ListView
            android:id="@+id/durationlist"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@id/commandperseclist" />


        <iitp.project.haechi.purdueapps3.joystick.JoystickManager
            android:id="@+id/manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <iitp.project.haechi.purdueapps3.joystick.JoyStick
                android:id="@+id/joyL"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/console"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/joyL"
                android:layout_weight="1"
                android:focusable="false"
                android:text="now \ncommand per sec : \nduration: \nwheel:\n" />

            <iitp.project.haechi.purdueapps3.joystick.JoyStick
                android:id="@+id/joyR"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />

        </iitp.project.haechi.purdueapps3.joystick.JoystickManager>
    </RelativeLayout>

</RelativeLayout>