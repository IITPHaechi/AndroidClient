<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <ListView
            android:id="@+id/commandperseclist"
            android:layout_width="200dp"
            android:layout_height="150dp" />

        <ListView
            android:id="@+id/durationlist"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@id/commandperseclist" />

        <EditText
            android:id="@+id/logText"
            android:layout_alignParentBottom="true"
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/joy1"
            android:focusable="false"
            android:text="now \ncommand per sec : \nduration: \nwheel:\n" />

        <iitp.project.haechi.purdueapps3.joystick.JoyStick
            android:id="@+id/joy1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />

        <iitp.project.haechi.purdueapps3.joystick.JoyStick
            android:id="@+id/joy2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


</RelativeLayout>